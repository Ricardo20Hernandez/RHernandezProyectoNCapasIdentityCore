@model ML.Empleado
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md">
            <h1 style="font-weight:bold">Empleado Dependiente</h1>
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <h4>Seleccione un empleado mediante el botón</h4>
            <br />
        </div>
        <br />
    </div>
    <div class="row">
        @if(Model.Empleados != null && Model.Empleados.Count > 0)
        {
            foreach(ML.Empleado empleado in Model.Empleados)
            {
                <div class="col-lg-3">
                    <div class="card-group">
                        <div class="card" style="width: 18rem; height: 28rem; margin-bottom:8rem">
                            <div class="list-group">
                                <div class="text-center">
                                    <br />
                                    @if(empleado.Foto == null)
                                    {
                                       <img src = "" id ="imgEmpleado" style="width:100px; height:100px"/>
                                    }
                                    else
                                    {
                                        <img id="imgEmpleado" src="data:image/png;base64,@Convert.ToBase64String(empleado.Foto)" style="width:100px; height:100px" />
                                    }
                                    <br />
                                    <h4 class="card-title">@empleado.Nombre @empleado.ApellidoPaterno</h4>
                                    <br />
                                    <p class="card-text">Email: @empleado.Email</p>
                                    <p class="card-text">Fecha Ingreso: @empleado.FechaIngreso</p>
                                    <p class="card-text">RFC: @empleado.RFC</p>
                                    <br />
                                    <a href="@Url.Action("EmpleadoDependiente","EmpleadoDependiente",new{NumeroEmpleado = empleado.NumeroEmpleado, Nombre = empleado.Nombre, ApellidoPaterno = empleado.ApellidoPaterno})" class="btn btn-primary" style="font-weight:bold">Seleccionar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-danger" role="alert"> No hay empleados registrados en el sistema </div>
        }
    </div>
</div>

<style>
    .card{
        /* Add shadows to create the "card" effect */
        box-shadow: 0 5px 10px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        --card-icon-background-color: rgba(255, 255, 255, 0.08);
        background-color: white;
        color: black;
        border-color: black;
    }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 20px 20px 0 #158cba;
            transition: 0.3s;
            /*transform: perspective(900px) translateY(-5%) rotateX(25deg) translateZ(0);*/
            -moz-box-shadow: 2px 35px 32px -8px rgba(0, 0, 0, 0.75);
            transform: scale(1.03);
        }

    /* Add some padding inside the card container */
    .container {
        padding: 2px 16px;
    }
</style>

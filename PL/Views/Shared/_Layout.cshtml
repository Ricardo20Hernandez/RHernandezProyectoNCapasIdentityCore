@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInMannager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PL</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/azul.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASEGURADORA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
@*                     <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Empleado" asp-action="GetAll">Empleado</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Rol" asp-action="GetAll">Roles</a>
                        </li>
                    </ul> *@
                    @if (signInMannager.IsSignedIn(User))
                    {
                        if (User.IsInRole("Administrador"))
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="Empleado" asp-action="GetAll">Empleados</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="Rol" asp-action="GetAll">Roles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="EmpleadoDependiente" asp-action="GetAll">Dependientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" asp-area="" asp-controller="Empresa" asp-action="GetAll">Empresas</a>
                                </li>
                            </ul>
                        }else
                        {
                            if (User.IsInRole("Usuario"))
                            {
                                <ul class="navbar-nav flex-grow-1">
                                    @*                  <li class="nav-item">
                                        <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-area="" asp-controller="Empleado" asp-action="GetAll">Empleado</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-area="" asp-controller="Rol" asp-action="GetAll">Roles</a>
                                    </li> *@
                                </ul>
                            }
                            else
                            {
                                <br />
                                <div class="alert alert-danger" role="alert"> No tienes asignado un rol
                                    pide al administrador que te otorgue uno
                                </div>
                            }
                        }
                    }
                    else
                    {
                        

                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Aseguradora</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
